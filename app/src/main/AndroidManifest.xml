<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michaeldonally.realityquestv3">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Globals"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Reality Quest TEST"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".playerCreationActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="Reality Quest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".loginActivity" />
        <activity android:name=".gameTypeSelectActivity" />
        <activity android:name=".SelectMapActivity" />
        <activity android:name=".selectContentToCreateAcitivity" />
        <activity android:name=".create_event" />
        <activity android:name=".createOptionActivity" />
        <activity android:name=".createMapActivity" />
        <activity android:name=".TravelActivity" />
        <activity android:name=".eventActivity" />
        <activity android:name=".questEnd"></activity>
    </application>

</manifest>