<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="76dp"
            android:layout_height="55dp"
            android:id="@+id/imageButton8"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameText"
            android:layout_weight="1"
            android:text="Username"
            android:textSize="24sp" />



    </LinearLayout>

    <TextView
        android:text="Choose Content to Create:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/mapButton"
        android:scaleType="fitCenter"
        android:src="@drawable/buttontest"
        android:background="@android:color/transparent"
        android:layout_below="@+id/eventButton"
        android:layout_alignLeft="@+id/eventButton"
        android:layout_alignStart="@+id/eventButton"
        android:layout_marginTop="20dp"
        android:onClick="onEvent"/>

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/eventButton"
        android:scaleType="fitCenter"
        android:src="@drawable/buttontest"
        android:background="@android:color/transparent"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:onClick="onMap"/>

    <TextView
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/eventButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:textSize="24sp"/>

    <TextView
        android:text="Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView8"
        android:textSize="24sp"
        android:layout_alignTop="@+id/mapButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>