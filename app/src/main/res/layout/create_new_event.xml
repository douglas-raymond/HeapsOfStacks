<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/forest2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="69dp">

            <ImageButton
                android:layout_width="76dp"
                android:layout_height="55dp"
                android:id="@+id/imageButton8"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usernameText"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="24sp" />

            <ImageButton
                android:layout_height="69dp"
                android:id="@+id/imageButton7"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:layout_gravity="center|end"
                android:layout_width="100dp"
                android:src="@drawable/submitbutton"
                android:onClick="onSubmit"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Tap here to enter your new event's name"
            android:ems="10"
            android:background="@color/lightGreen"
            android:id="@+id/eventName" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:id="@+id/images"
            android:layout_weight="0.00"
            android:background="@drawable/textborder"
            android:spinnerMode="dialog"
            android:paddingLeft="13dp"/>

        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/flav"
            android:gravity="center_vertical|center"
            android:background="@drawable/textborder"
            android:layout_gravity="bottom"
            android:hint="Enter flavour text eg. A Stranger appears..."
            android:layout_height="65dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.00" />

        <TextView
            android:text="Select Options for Player:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:background="@color/lightGreen"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:prompt="@string/spinner_prompt"
            android:layout_weight="0.00"
            android:background="@drawable/textborder"
            android:spinnerMode="dialog"
            android:paddingLeft="13dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:prompt="@string/spinner_prompt"
            android:background="@drawable/textborder"
            android:spinnerMode="dialog"
            android:paddingLeft="13dp"/>

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:prompt="@string/spinner_prompt"
            android:background="@drawable/textborder"
            android:spinnerMode="dialog"
            android:paddingLeft="13dp"/>

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:prompt="@string/spinner_prompt"
            android:background="@drawable/textborder"
            android:spinnerMode="dialog"
            android:paddingLeft="13dp"/>

        <TextView
            android:text="Select Encounter Level:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:background="@color/lightGreen"/>

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:prompt="@string/spinner_prompt"
            android:background="@drawable/textborder"
            android:spinnerMode="dialog"
            android:paddingLeft="13dp"/>

    </LinearLayout>

</RelativeLayout>